{
  "name": "commercetools-nodejs-boilerplate",
  "version": "1.0.0-beta.1",
  "main": "index.js",
  "description": "Generic Boilerplate for bootstrapping NodeJS applications",
  "main": "./lib/main",
  "scripts": {
    "build": "babel src -d lib",
    "test": "npm test",
    "lint": "./scripts/lint src test",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commercetools/nodejs-boilerplate.git"
  },
  "keywords": [
    "commercetools",
    "boilerplate",
    "sphere",
    "sphereio",
    "starter"
  ],
  "author": "Abimbola Idowu <abimbola.idowu@commercetools.de> (https://github.com/hisabimbola)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/commercetools/nodejs-boilerplate/issues"
  },
  "engines": {
    "node": ">= 4.5.0"
  },
  "homepage": "https://github.com/commercetools/nodejs-boilerplate#readme",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "commitizen": "^2.8.6",
    "ghooks": "^1.3.2",
    "cz-conventional-changelog": "^1.2.0",
    "eslint-config-commercetools": "latest",
    "validate-commit-msg": "^2.8.0"
  },
  "eslintConfig": {
    "extends": "commercetools"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "./scripts/lint-staged-files"
    },
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}

